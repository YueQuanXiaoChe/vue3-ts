# @Author: wang xue
# @Description: http://editorconfig.org

root = true

# 对所有文件生效
# indent_style 缩进类型
# indent_size 缩进数量
# end_of_line 换行符格式
# charset 文件编码
# trim_trailing_whitespace 是否删除行尾的空格
# insert_final_newline 是否在文件的最后插入一个空行
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false
